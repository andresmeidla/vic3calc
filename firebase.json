{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "public",
      "scripts",
      "src",
      "index.html",
      "package.json",
      "package-lock.json",
      "README.md",
      "tsconfig.json",
      "tsconfig.config.json",
      "vite.config.ts",
      "tailwind.config.js",
      "postcss.config.js"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
